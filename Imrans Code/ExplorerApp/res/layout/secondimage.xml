<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FF00"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/Costomise"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:text="Customise your image."
        android:textSize="30dp" />

    <TextView
        android:id="@+id/text"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginTop="80dp"
        android:text="gg"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/nameOfColour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="40dp"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/overallImage"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/second__image" />

    <ImageView
        android:id="@+id/hatChanger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_marginTop="300px"
        android:layout_marginLeft="0px"
         />

    <ImageView
        android:id="@+id/middleChanger"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="20px" 
        android:layout_marginLeft="-42px"/>
    

    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Costomise"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:text="Next"
        android:textSize="30dp" />

    <ImageButton
        android:id="@+id/hatForward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/nextButton"
        android:layout_alignTop="@+id/nameOfColour"
        android:onClick="forward"
        android:src="@android:drawable/ic_media_ff" />

    <ImageButton
        android:id="@+id/hatBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/nameOfColour"
        android:layout_marginLeft="23dp"
        android:onClick="back"
        android:src="@android:drawable/ic_media_rew" />

    <ImageButton
        android:id="@+id/middleBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nextButton"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="28dp"
        android:onClick="back"
        android:src="@android:drawable/ic_media_rew" />

    <ImageButton
        android:id="@+id/middleForward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/middleBack"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="34dp"
        android:onClick="forward"
        android:src="@android:drawable/ic_media_ff" />

    <TextView
        android:id="@+id/colourName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text"
        android:layout_centerHorizontal="true"
        android:textSize="30px" />

    <ImageButton
        android:id="@+id/colourForward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/overallImage"
        android:onClick="forward"
        android:src="@android:drawable/ic_media_ff" />

    <ImageButton
        android:id="@+id/colourBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/hatBack"
        android:layout_alignParentBottom="true"
        android:onClick="back"
        android:src="@android:drawable/ic_media_rew" />


</RelativeLayout>
