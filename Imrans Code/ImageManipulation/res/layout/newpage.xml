<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back?" />
  
    
    <ImageView
        android:id="@+id/skeletonEnemy"
        android:layout_width="300px"
        android:layout_height="350px"
        android:layout_marginTop="188dp"
        android:layout_marginLeft="50dp"
        android:src="@drawable/skeletonface" />
    
    <TextView
        android:id="@+id/colourName"
        android:layout_width="300px"
        android:layout_height="100px"
        android:layout_marginTop="200px" 
        android:layout_marginLeft="50px"/>
    
    <Button
        android:id="@+id/colourChanger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/skeletonEnemy"
        android:layout_marginLeft="20dp"
        android:text="Change colour." />



    <Button
        android:id="@+id/helmetChanger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/skeletonEnemy"
        android:layout_alignTop="@+id/skeletonEnemy"
        android:text="Helmet" />

</RelativeLayout>