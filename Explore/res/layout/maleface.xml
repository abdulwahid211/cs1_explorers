<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FABF72"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/text"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/nameOfColour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/overallImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/male__face" />

    <ImageView
        android:id="@+id/hatChanger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dip" />

    <ImageView
        android:id="@+id/glassesChanger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dip" />

    <ImageView
        android:id="@+id/beardChanger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="190dip" />

    <ImageView
        android:id="@+id/colourSpectrum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/colourSpectrum1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dip" />

    <ImageView
        android:id="@+id/colourSpectrum2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dip" />

    <ImageView
        android:id="@+id/colourSpectrum3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="135dip" />

    <ImageView
        android:id="@+id/colourSpectrum4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="175dip" />

    <ImageView
        android:id="@+id/colourSpectrum5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="215dip" />

    <TextView
        android:id="@+id/colourName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dip"
        android:layout_marginTop="560dip"
        android:text="Choose your colour."
        android:textSize="30px" />

    <Button
        android:id="@+id/ButtonOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="390dip"
        android:background="@drawable/buttons"
        android:text="Hair"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="20dip" />

    <Button
        android:id="@+id/ButtonFour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="265dip"
        android:layout_marginTop="390dip"
        android:background="@drawable/buttons"
        android:text="Skin"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="20dip" />

    <Button
        android:id="@+id/ButtonThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="190dip"
        android:layout_marginTop="390dip"
        android:background="@drawable/buttons"
        android:text="Beard"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="20dip" />

    <Button
        android:id="@+id/ButtonTwo"
        android:background="@drawable/buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="95dip"
        android:layout_marginTop="390dip"
        android:text="Glasses"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="20dip" />

    <Button
        android:id="@+id/nextButton"
        android:background="@drawable/buttons"
        android:layout_width="380dip"
        android:layout_height="60dip"
        android:layout_marginLeft="-1dip"
        android:layout_marginTop="2dip"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:text="Submit"
        android:textSize="35dp"
        />
   

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="70dip"
        android:layout_height="50dip"
        android:layout_marginLeft="8dip"
        android:layout_marginTop="200dip"
        android:background="@drawable/buttons"
        android:src="@android:drawable/ic_media_rew" />

    <ImageButton
        android:id="@+id/forwardButton"
        android:layout_width="70dip"
        android:layout_height="50dip"
        android:layout_marginLeft="280dip"
        android:layout_marginTop="200dip"
        android:background="@drawable/buttons"
        android:src="@android:drawable/ic_media_ff" />

</RelativeLayout>