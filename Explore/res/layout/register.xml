<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#18293B" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="619dp" >

        <EditText
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/password"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/about"
            android:layout_marginTop="28dp"
            android:background="#FFFFFF"
            android:ems="10"
            android:hint="  Username" />

        <EditText
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/postcode"
            android:layout_alignRight="@+id/about"
            android:layout_below="@+id/username"
            android:layout_marginTop="16dp"
            android:background="#FFFFFF"
            android:ems="10"
            android:hint=" Password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/postcode"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/time"
            android:layout_alignRight="@+id/time"
            android:layout_below="@+id/password"
            android:layout_marginTop="18dp"
            android:background="#FFFFFF"
            android:ems="10"
            android:freezesText="true"
            android:hint="  First Name" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/age"
            android:layout_alignRight="@+id/about"
            android:layout_below="@+id/postcode"
            android:layout_marginTop="21dp"
            android:background="#FFFFFF"
            android:ems="10"
            android:hint=" Last Name" />

        <EditText
            android:id="@+id/age"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/nation"
            android:layout_alignRight="@+id/about"
            android:layout_below="@+id/time"
            android:layout_marginTop="20dp"
            android:background="#FFFFFF"
            android:ems="10"
            android:hint=" Age" />

        <EditText
            android:id="@+id/nation"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/occu"
            android:layout_alignRight="@+id/about"
            android:layout_below="@+id/age"
            android:layout_marginTop="18dp"
            android:background="#FFFFFF"
            android:ems="10"
            android:hint=" Nationality" />

        <EditText
            android:id="@+id/occu"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/about"
            android:layout_alignRight="@+id/about"
            android:layout_below="@+id/nation"
            android:layout_marginTop="22dp"
            android:background="#FFFFFF"
            android:ems="10"
            android:hint=" Occupation" />

        <EditText
            android:id="@+id/about"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_below="@+id/occu"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:background="#FFFFFF"
            android:ems="10"
            android:hint="Feel free to explain about yourself........" />

        <Button
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/about"
            android:textColor="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Register" />

    </RelativeLayout>

</ScrollView>