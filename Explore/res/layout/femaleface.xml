<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#FBAD47">
    
   

    <TextView
        android:id="@+id/text"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginTop="80dp"
        
        android:textSize="30dp" />

    <TextView
        android:id="@+id/nameOfColour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="40dp"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/overallImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/female__face" />

    <ImageView
        android:id="@+id/hatChanger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"       
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dip" />
         />

    <ImageView
        android:id="@+id/glassesChanger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dip" />


   <Button
          android:id="@+id/nextButton"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="120dip"
          android:layout_marginTop="450dip"
          android:text="Next"
          android:textSize="20dip" />

   <ImageButton
          android:id="@+id/backButton"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="200dip"
          android:layout_marginLeft="15dip"
          android:src="@android:drawable/ic_media_rew" />

      <ImageButton
          android:id="@+id/forwardButton"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="200dip"
          android:layout_marginLeft="250dip"
          android:src="@android:drawable/ic_media_ff" />

    <Button
        android:id="@+id/ButtonOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hair"
        android:textColor="#000000"  
        android:layout_marginLeft="15dip"
        android:layout_marginTop="390dip"
        android:textSize="20dip" />

    <Button
        android:id="@+id/ButtonThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:text="Skin"               
        android:layout_marginLeft="240dip"
        android:layout_marginTop="390dip"
        android:textColor="#000000"
        android:textSize="20dip" />
    <ImageView
        android:id="@+id/colourSpectrum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <ImageView
        android:id="@+id/colourSpectrum1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dip"/>
    
    <ImageView
        android:id="@+id/colourSpectrum2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dip"/>
    
    <ImageView
        android:id="@+id/colourSpectrum3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="135dip"/>
    
     <ImageView
        android:id="@+id/colourSpectrum4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="175dip"/>
        
        
        <ImageView
        android:id="@+id/colourSpectrum5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_marginLeft="215dip"/>

      <TextView
          android:id="@+id/colourName"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="1000px"
          android:layout_marginLeft="300px"
          android:text="Choose your colour."
          android:textSize="30px" />

      <Button
          android:id="@+id/ButtonTwo"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Glasses"
          android:textColor="#000000"
          android:layout_marginLeft="115dip"
          android:layout_marginTop="390dip"
          android:textSize="20dip" />
      
      
      
</RelativeLayout>
